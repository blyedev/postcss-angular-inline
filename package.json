    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "prettier": "3.4.1",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.6.3",
    "uvu": "^0.5.6",
